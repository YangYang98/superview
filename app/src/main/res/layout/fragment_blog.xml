<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--indeterminate==false表示不确定进度条的真实值
    style="?android:attr/horizontalScrollViewStyle"表示水平进度条-->
    <ProgressBar
        android:id="@+id/blog_progress"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:indeterminate="false"
        style="?android:attr/horizontalScrollViewStyle"
        android:max="100"
        android:indeterminateDrawable="@drawable/progress_bar_drawable"/>
    <WebView
        android:id="@+id/webview1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </WebView>
</LinearLayout>